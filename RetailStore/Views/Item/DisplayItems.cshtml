@model IEnumerable<RetailStore.Models.Domain.Item>
@{
    
}
<div class="mt-2" style="width:50%">
    <div class="row">
        <h2>Items</h2>
        <div class="col-md-100">
            <a href="/Item/AddItem" class="btn btn-primary">Add Item</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>

                        <td>
                            <a class="btn btn-success" href="/Item/EditItem?id=@item.Id">Edit</a>
                            <a class="btn btn-danger" href="/Item/DeleteItem?id=@item.Id">Delete</a>
                        </td>
                    </tr>
                }
                
            </thead>

        </table>
    </div>
   
</div>
